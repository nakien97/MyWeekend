<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgHistory"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="@color/enableChair"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="115dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtHistoryDTBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date and time book"
                    android:textColor="@color/text_content" />

                <TextView
                    android:id="@+id/txtHistoryFilmName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Film name"
                    android:textColor="@color/text_content" />

                <TextView
                    android:id="@+id/txtHistoryDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date and time"
                    android:textColor="@color/text_content" />

                <TextView
                    android:id="@+id/txtHistoryCCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cinema Center"
                    android:textColor="@color/text_content" />

                <TextView
                    android:id="@+id/txtHistoryCinema"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cinema"
                    android:textColor="@color/text_content" />

                <TextView
                    android:id="@+id/txtHistoryTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total ticket"
                    android:textColor="@color/text_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtHistoryTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="39dp"
                android:text="Total"
                android:textColor="@android:color/holo_red_light" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>