<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_layout"
    android:orientation="vertical"
    tools:context=".Confirm">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarConfirm"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/toolbar_border"
        app:title="Xác nhận thanh toán" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageViewFilm"
                android:background="#aea8a8"
                android:layout_width="150dp"
                android:layout_height="222dp" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtFilmName"
                        android:textStyle="bold"
                        android:text="Film name"
                        android:textColor="@color/text_content"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                    <TextView
                        android:id="@+id/txtAge"
                        android:textColor="#c72624"
                        android:text="Age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txtTimeDate"
                        android:textSize="18sp"
                        android:textColor="@color/text_content"
                        android:text="Time and Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txtCinemasCenter"
                        android:textSize="18sp"
                        android:textColor="@color/text_content"
                        android:text="Cinemas Center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txtCinemas"
                        android:textSize="18sp"
                        android:textColor="@color/text_content"
                        android:text="Rạp "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txtChair"
                        android:textSize="18sp"
                        android:textColor="@color/text_content"
                        android:text="Ghế: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txtShowTotal"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#c72624"
                        android:text="Tổng tiền: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:text="THÔNG TIN VÉ"
        android:textColor="@color/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingStart="2dp"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/text_content"
                android:background="#fff"
                android:text="Số vé:"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingStart="2dp"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:textColor="@color/text_content"
                android:text="Đơn giá:"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingStart="2dp"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:textColor="@android:color/holo_red_light"
                android:maxLines="1"
                android:text="Tổng tiền:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingRight="2dp"
                android:gravity="right"
                android:id="@+id/txtTotalTicket"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/text_content"
                android:background="#fff"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingRight="2dp"
                android:gravity="right"
                android:id="@+id/txtPrice"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:textColor="@color/text_content"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingRight="2dp"
                android:gravity="right"
                android:id="@+id/txtTransTotal"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:textColor="@android:color/holo_red_light"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnTransConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:background="@drawable/custom_button"
            android:text="Xác nhận"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnTransConfirm"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/btnTransConfirm"
            android:background="@android:color/transparent"
            android:text="Hủy giao dịch"
            android:textColor="@color/text_content" />
    </RelativeLayout>

</LinearLayout>